@model IEnumerable<IGrouping<Section, Category>>

@{
    ViewData["Title"] = "Página Inicial";
}

<h1>Fórum</h1>
<a asp-action="Create" asp-controller="Sections">Nova Seção</a>
<a asp-action="Create" asp-controller="Categories">Nova categoria</a>

@foreach (var categoriesBySection in Model)
{
    <div>
        <h2>@categoriesBySection.Key.Name</h2>

        @foreach (var category in categoriesBySection)
        {
            <article>
                <h3><a asp-action="Details" asp-controller="Categories" asp-route-id="@category.Id">@category.Name</a></h3>
                <p>@category.Description</p>
            </article>
        }
    </div>
}

