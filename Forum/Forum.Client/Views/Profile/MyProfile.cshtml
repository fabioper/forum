@model User

@{
    ViewData["Title"] = "MyProfile";
}

<h1>Perfil</h1>

<a asp-action="Edit" asp-controller="Profile">Atualizar perfil</a>

<section>
    <p>
        <img src="@Model.AvatarUri" alt="" />
    </p>
    <p>
        <strong>Username:</strong> @Model.UserName
    </p>
    <p>
        <strong>Email:</strong> @Model.Email
    </p>
</section>


