@model IEnumerable<Forum.Domain.Entities.Section>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Sections">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>

                <ul>
                    @foreach (var category in item.Categories)
                    {
                        <li>@category.Name</li>
                    }
                </ul>
            </td>
        </tr>
}
    </tbody>
</table>
